@model Employee

<h4>Delete Employee</h4>
<hr />
<form action="/Employee/Delete" method="post" novalidate="novalidate">
    <div class="form-group">
        <label class="form-label" for="Name">Employee Name:</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" disabled>
    </div>
    <div class="form-group">
        <label class="form-label" for="Age">Age:</label>
        <input class="form-control" name="Age" type="number" value="@Model.Age" disabled>
    </div>
    <div class="form-group mt-4">
        <p>
            <input class="btn btn-info" type="submit" value="Delete" />
            <a class="btn btn-danger" asp-action="Index">Cancel</a>
        </p>
    </div>
</form>



