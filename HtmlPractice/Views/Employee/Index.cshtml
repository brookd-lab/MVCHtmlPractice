@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employee List";
}
    <span>
        <h3>Employee List</h3>
        <a class="btn btn-info" asp-action="Create">Create New</a>
    </span>
<br/>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => employee.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => employee.Age)
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Update" asp-route-id="@employee.Id">Edit</a> 
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@employee.Id">Details</a> 
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table> 