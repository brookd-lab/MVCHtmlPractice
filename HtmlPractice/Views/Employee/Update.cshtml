@model Employee

@{
    ViewData["Title"] = "Update Employee";
}

<div>
    <h4>Edit Employee</h4>
    <hr />
</div>
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="Update">
            <div class="form-group mb-2">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" name="Name" placeholder="Name" value="@Model.Name" required>
            </div>
            <div class="form-group mb-4">
                <label class="form-label">Age</label>
                <input type="text" class="form-control" name="Age" placeholder="Age" value="@Model.Age" required>
            </div>
            <a class="btn btn-success" type="submit">Update Employee</a>
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>